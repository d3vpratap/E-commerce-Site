<% layout('layout/boilerplate') -%>
<section>
    <div class="container">
        <div class="row justify-content-center">
            <% for (const product of products) { %>
                <div class="col-lg-3 col-md-6 d-flex align-items-stretch">
                    <div class="card mx-auto mb-4" style="width: 18rem;">
                        <img src="<%= product.img %>" class="card-img-top" alt="<%= product.name %>">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-center"><%= product.name %></h5>
                            <p class="card-text text-center"><%= product.desc %></p>
                            <h5 class="card-title text-center">&#8377; <%= product.price %></h5>
                            <a href="/products/<%= product._id %>" class="btn btn-primary btn-sm mt-auto">Buy Now</a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</section>
